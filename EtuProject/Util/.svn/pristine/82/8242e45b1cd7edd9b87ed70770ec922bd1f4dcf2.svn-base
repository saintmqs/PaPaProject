#import <UIKit/UIKit.h>
#import "VideoPlayer.h"
#import "VideoPlayerView.h"

@protocol VideoPlayerKitDelegate <NSObject>

@end

@interface VideoPlayerKit : UIViewController <VideoPlayer>

